<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plugin PUBLIC "-//JPF//Java Plug-in Manifest 1.0" "http://jpf.sourceforge.net/plugin_1_0.dtd">
<plugin id="com.tle.web.fedsearch" version="1">
  <requires>
    <import plugin-id="com.tle.common.i18n" />
    <import plugin-id="com.tle.web.sections" />
    <import plugin-id="com.tle.web.sections.equella" />
    <import plugin-id="com.tle.core.fedsearch" />
    <import plugin-id="com.tle.web.selection" />
    <import plugin-id="com.tle.web.search" />
    <import plugin-id="com.tle.web.wizard" />
    <import plugin-id="com.tle.web.htmleditor" />
    <import plugin-id="com.tle.web.itemlist" />
    <import plugin-id="com.tle.core.guice" />
    <import plugin-id="com.tle.core.schema" />
    <import plugin-id="com.equella.core7" exported="true" />
    <import plugin-id="com.equella.core3" exported="true" />
  </requires>
  <runtime>
    <library type="code" path="classes/" id="core">
      <export prefix="*" />
    </library>
    <library type="resources" path="resources/" id="resources" />
  </runtime>
  <extension-point id="remoteRepoSearch">
    <parameter-def id="type" type="string" multiplicity="one" />
    <parameter-def id="class" type="string" multiplicity="one">
      <doc>
        <doc-text>extend com.tle.web.remoterepo.AbstractRemoteRepoSearch</doc-text>
      </doc>
    </parameter-def>
  </extension-point>
  <extension plugin-id="com.tle.core.guice" point-id="module" id="guiceModules">
    <parameter id="class" value="com.tle.web.remoterepo.guice.RemoteRepoModule" />
    <parameter id="class" value="com.tle.web.sections.equella.guice.EquellaModule" />
  </extension>
  <extension plugin-id="com.tle.common.i18n" point-id="bundle" id="strings">
    <parameter id="group" value="resource-centre" />
    <parameter id="file" value="lang/i18n.properties" />
  </extension>
  <extension plugin-id="com.tle.web.sections" point-id="sectionTree" id="remoteRepos">
    <parameter id="path" value="/access/remoterepo.do" />
    <parameter id="root" value="bean:/access/remoterepo" />
  </extension>
</plugin>
